<% if @costumes.empty? %>
    <br>
    <h4>Your search returned no results. Please try again.</h4>
    <br>
    <%= link_to 'See all costumes', root_path, class: "btn btn-primary ml-1" %>
<% else %>
  <div class="home-group">
      <% @costumes.each do |costume| %>
          <%= link_to costume_path(costume) do %>
        <div class="home-card">
          <% if costume.photos.attached? %>
            <img alt="<%= costume.title %>" src="<%= cl_image_path costume.photos.first.key %>" />
          <% else %>
            <img alt="<%= costume.title %>" width="100" height="100" src="" />
          <% end %>
          <div class="home-card-infos">
            <h6> <%= truncate(costume.title, length:25)%> </h6>
            <h6>$ <%= costume.price %> / day</h6>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
