<%= simple_form_for(@costume) do |f| %>
  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.input :price, label: "Enter daily rate $" %>
  <%= f.input :photos, as: :file, input_html: { multiple: true, name: "post_attachments[photos][]" } %>
  <br>
  <%= f.submit "Save", class: "btn btn-primary"%>
  <br>
<% end %>
