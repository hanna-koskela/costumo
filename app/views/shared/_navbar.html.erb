<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <div class='d-flex'>
    <div class="logo"></div>
    <span><%= (user_signed_in?) ? "Hello, #{current_user.first_name}" : ''%></span>
  </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item"> <!--put active in class to make it dark -->
          <%= link_to "My Bookings", bookings_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Costumes", costumes_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">

          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag asset_url("menu.png"), class: "dropdown-toggle", style:"max-height: 35px; max-width: 35px;", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Post Costume", new_costume_path, method: :get, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Update User", edit_user_registration_path, method: :get, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-primary" %>
        </li>
        <div class="dropdown-divider"></div>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
